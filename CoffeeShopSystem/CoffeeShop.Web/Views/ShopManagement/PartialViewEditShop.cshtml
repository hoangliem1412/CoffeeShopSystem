    <form class="form-horizontal editShopForm" method="post" action="/ShopManagement/Edit" name="editShopForm" id="editShopForm_@Model.ID">
        <div class="form-group">
            <div class="errorText col-sm-6"></div>
        </div>
        <div class="form-group">
           
            <label for="Name" class="col-sm-2 control-label">Tên cửa hàng: </label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
            </div>
          
        </div>
        

        <div class="form-group">
            <label for="city" class="col-sm-2 control-label">Thành phố:</label>
            <div class="col-sm-4">

                <select class="form-control cboCity_Edit" id="cboCity_Edit_@Model.ID" data-id="@Model.ID">

                    @Html.Action("PartialViewListCity", "ShopManagement", new { wardID = @Model.WardID })


                </select>
        </div>

            
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Quận : </label>
            <div class="col-sm-4">
                <select class="form-control cboDistrict_Edit" id="cboDistrict_Edit_@Model.ID" data-id="@Model.ID">
                    @Html.Action("PartialViewListDistrict", "ShopManagement" , new { wardID = @Model.WardID })
                </select>

               
            </div>
            
        </div>

      
        <div class="form-group">
            <label class="col-sm-2 control-label">Phường : </label>

            <div class="col-sm-4">
                <select class="form-control cboWard_Edit" id="cboWard_Edit_@Model.ID" name="WardID" data-id="@Model.ID">
                    @Html.Action("PartialViewListWard", "ShopManagement" , new { wardID = @Model.WardID }) 
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="txtAddress" class="col-sm-2 control-label">Địa chỉ :</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="txtAddress_Edit" name="DetailAddress" value="@Model.DetailAddress" />
            </div>
            
        </div>


         <div class="form-group">
            <label for="txtFullDes" class="col-sm-2 control-label">Mô tả:</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="txtFullDes_Edit" name="Description" >@Model.Description</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="chkIsDelete" class="col-sm-2 control-label">Đã xóa?</label>
         
            <div class="col-sm-4">
